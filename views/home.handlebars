<form class="d-flex" method="POST" action="/admin/" novalidate>
    <input class="form-control me-2" type="search" placeholder="Search by id or title" name="search" aria-label="Search">
    <button class="btn btn-outline-light" type="submit">Search</button>
</form>


<a href="/admin/adduser" type="button" >+ add article</a> <br><br>

<table >
  <thead>
    <tr>
      <th>ID</th>
      <th>user_id</th>
      <th>title</th>
      <th>content</th>
      <th>updated_at</th>
      <th>Action</th>
    </tr>
  </thead>
  <tbody>

    {{#each rows}}
    <tr>
      <th>{{this.id}}</th>
      <td>{{this.user_id}}</td>
      <td>{{this.title}}</td>
      <td>{{this.content}}</td>
      <td>{{this.updated_at}}</td>
      <td>
        <a href="/admin/viewuser/{{this.id}}" type="button"> View</a>
        <a href="/admin/edituser/{{this.id}}" type="button">Edit</a>
        <a href="/admin/{{this.id}}" type="button">Delete</a>
      </td>
    </tr>
    {{/each}}

  </tbody>
</table>